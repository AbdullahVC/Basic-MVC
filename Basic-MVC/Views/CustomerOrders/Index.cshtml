@using Basic_MVC.Models
@using Basic_MVC.ViewModels
@model CustomerOrderViewModel

<h2>Müşteri Bilgileri</h2>
<p>ID: @Model.Customer.Id</p>
<p>Ad: @Model.Customer.FirstName</p>
<p>Soyad: @Model.Customer.LastName</p>
<p>Email: @Model.Customer.Email</p>

<h2>Siparişler</h2>
<table border="1">
    <thead>
        <tr>
            <th>Sipariş ID</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Miktar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.ProductName</td>
                <td>@order.Price</td>
                <td>@order.Quantity</td>
            </tr>
        }
    </tbody>
</table>